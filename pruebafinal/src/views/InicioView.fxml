            <DatePicker fx:id="calendarPicker"/>
        </VBox>
    </center>

    <!-- Cuadrante 3: Asistencias semanales -->
    <right>
        <VBox fx:id="attendanceSection" spacing="10" alignment="TOP_RIGHT" styleClass="attendance-section">
            <Label text="Asistencias semanales" styleClass="header-label"/>
            <TableView fx:id="attendanceTable" styleClass="attendance-table">
                <columns>
