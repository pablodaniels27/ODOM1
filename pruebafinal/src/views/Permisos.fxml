<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane prefHeight="1351.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PermisosController">
    <children>
        <BorderPane prefHeight="1324.0" prefWidth="820.0" style="-fx-padding: 10;" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" BorderPane.alignment="CENTER">
                    <!-- Título -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Acceso de Administración" />
                        <Label style="-fx-font-size: 14px;" text="(Define un rol o asigna derechos)" />
                    </HBox>

                    <!-- Barra de búsqueda de supervisores -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Buscar Supervisor:" />
                        <TextField fx:id="searchField"  prefWidth="300" promptText="Buscar supervisor..." />
                        <Button  text="Buscar" />
                    </HBox>

                    <!-- Label para mostrar el nombre del supervisor -->
                    <Label fx:id="supervisorLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Supervisor: " />
                </VBox>
            </top>

            <center>
                <ScrollPane prefHeight="1139.0" prefWidth="800.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
                    <content>
                        <VBox fx:id="permisosContainer" alignment="CENTER_LEFT" fillWidth="true" spacing="10">
                            <!-- Aquí se agregarán dinámicamente los CheckBoxes de permisos -->
                            <stylesheets>
                                <URL value="@../resources/style.css" />
                            </stylesheets>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

            <!-- Botones de aplicar cambios y deshacer cambios -->
            <bottom>
                <AnchorPane minHeight="45.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <Button fx:id="applyChangesButton" onAction="#applyChanges" text="Aplicar cambios" />
                        <Button fx:id="undoChangesButton" onAction="#undoChanges" text="Deshacer cambios" />
                        <Button fx:id="regresarButton" onAction="#regresarARegistroSucursal" text="Regresar" />
                    </HBox>
                </AnchorPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>