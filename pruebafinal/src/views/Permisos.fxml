<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PermisosController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox spacing="10" BorderPane.alignment="CENTER">
                    <!-- Título -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Acceso de Administración" />
                        <Label style="-fx-font-size: 14px;" text="(Define un rol o asigna derechos)" />
                    </HBox>

                    <!-- Barra de búsqueda de supervisores -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Buscar Supervisor:" />
                        <TextField fx:id="searchField" onKeyReleased="#searchForSupervisors" prefWidth="300" promptText="Buscar supervisor..." />
                        <Button text="Buscar" onAction="#handleSearchButton" />
                    </HBox>
                </VBox>
            </top>

            <center>
                <ScrollPane prefHeight="500.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                    <content>
                        <VBox fx:id="permisosContainer" alignment="CENTER_LEFT" spacing="10" fillWidth="true">
                            <!-- Aquí se agregarán dinámicamente los CheckBoxes de permisos -->
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

            <!-- Botón de aplicar cambios -->
            <bottom>
                <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                    <Button text="Aplicar cambios" onAction="#applyChanges" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
