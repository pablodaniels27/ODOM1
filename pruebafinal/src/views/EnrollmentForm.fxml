<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lector.EnrollmentFormController">
    <VBox alignment="CENTER" spacing="20" prefWidth="300.0" prefHeight="400.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 2; -fx-background-radius: 10; -fx-border-radius: 10;">
        <!-- Definición correcta de padding usando Insets -->
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Etiqueta para mostrar el estado del proceso -->
        <Label fx:id="statusLabel" text="Por favor ingresar huella dactilar" style="-fx-font-size: 16px; -fx-text-fill: gray;" />

        <!-- Vista de la imagen de la huella -->
        <ImageView fx:id="fingerprintImageView" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" style="-fx-background-color: #e6e6e6; -fx-border-radius: 10;" />

        <!-- Etiqueta para mostrar el ID único generado -->
        <Label fx:id="idLabel" text="ID" style="-fx-font-size: 14px; -fx-text-fill: gray;" />

        <!-- Contenedor para los botones de acción -->
        <VBox spacing="10">
            <Button fx:id="saveTemplateButton" text="REGISTRAR" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px;" onAction="#handleSaveTemplateButtonAction" />
            <Button fx:id="stopButton" text="CANCELAR" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px;" onAction="#stopCapture" />
        </VBox>
    </VBox>
</AnchorPane>
