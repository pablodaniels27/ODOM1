<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="422.0" prefWidth="746.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <TextField fx:id="usernameField" promptText="Enter your email" style="-fx-background-radius: 10;" />

    <StackPane>
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10;" />
        <TextField fx:id="passwordVisibleField" promptText="Password" style="-fx-background-radius: 10;" visible="false" />
        <ImageView fx:id="eyeIcon" fitHeight="20" fitWidth="20" onMousePressed="#showPassword" onMouseReleased="#hidePassword" style="-fx-cursor: hand; -fx-translate-x: -25px;" />
    </StackPane>

    <Hyperlink style="-fx-text-fill: blue;" text="Forgot password?" />

    <Button onAction="#handleLoginAction" style="-fx-background-color: #FF6F3F; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Log In" />

    <Button alignment="CENTER" onAction="#handleBackToPreLoginAction" prefHeight="26.0" prefWidth="190.0" style="-fx-background-color: #CCCCCC; -fx-text-fill: black; -fx-font-size: 14px; -fx-background-radius: 10;" text="Regresar" />
</VBox>
