<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="870.0" style="-fx-background-color: transparent; -fx-padding: 0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MonitoreoController">
    <!-- VBox para agrupar el título y el contenido -->
    <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Monitoreo General de Empleados" />

        <!-- Pane que reemplaza al GridPane -->
        <Pane>
            <!-- Contenido del Pane -->
            <Label layoutX="10" layoutY="10" text="Zona de trabajo" />
            <ComboBox fx:id="zonaTrabajoComboBox" layoutX="150" layoutY="10" prefWidth="200" />

            <Label layoutX="370" layoutY="10" text="Supervisores" />
            <ComboBox fx:id="supervisoresComboBox" layoutX="500" layoutY="10" prefWidth="200" />

            <Label layoutX="10" layoutY="50" text="Fecha Inicio" />
            <DatePicker fx:id="fechaInicioPicker" layoutX="150" layoutY="50" prefWidth="200" />

            <Label layoutX="370" layoutY="50" text="Fecha Fin" />
            <DatePicker fx:id="fechaFinPicker" layoutX="500" layoutY="50" prefWidth="200" />

            <Button layoutX="720" layoutY="10" prefWidth="150" text="Sólo Supervisores" />
            <Button layoutX="720" layoutY="50" prefWidth="150" text="Sólo Empleados" />

            <Label layoutX="10" layoutY="90" text="Nombre, Apellido, Sucursal..." />
            <TextField fx:id="searchField" layoutX="150" layoutY="90" prefWidth="720" />
        </Pane>
    </VBox>

    <!-- Tabla de empleados dentro del AnchorPane -->
    <TableView fx:id="employeeTableView" layoutY="169.0" prefHeight="682.0" prefWidth="870.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="169.0">
        <columns>
            <TableColumn fx:id="nombreColumn" style="-fx-alignment: CENTER_LEFT;" text="Nombre completo" />
            <TableColumn fx:id="idColumn" style="-fx-alignment: CENTER_LEFT;" text="ID" />
            <TableColumn fx:id="fechaEntradaColumn" style="-fx-alignment: CENTER_LEFT;" text="Fecha de entrada" />
            <TableColumn fx:id="horaEntradaColumn" style="-fx-alignment: CENTER_LEFT;" text="H.de entrada" />
            <TableColumn fx:id="horaSalidaColumn" style="-fx-alignment: CENTER_LEFT;" text="H.de salida" />
            <TableColumn fx:id="tiempoLaboradoColumn" style="-fx-alignment: CENTER_LEFT;" text="Tiempo laborado" />
            <TableColumn fx:id="infoColumn" style="-fx-alignment: CENTER_LEFT;" text="Info." />
        </columns>
    </TableView>

    <!-- Pane para contener el HBox de los botones de paginación -->
    <AnchorPane prefHeight="60.0" maxHeight="60.0" minHeight="60.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <Button text="Previous" />
            <Button text="1" />
            <Button prefWidth="23.0" text="2" />
            <Button text="3" />
            <Button text="..." />
            <Button text="Next" />
        </HBox>
    </AnchorPane>

</AnchorPane>
