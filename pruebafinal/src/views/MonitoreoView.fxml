<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="890.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MonitoreoController">
    <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
        <VBox spacing="10" style="-fx-padding: 10;" prefHeight="2000"> <!-- Se incrementa el prefHeight -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Monitoreo General de Empleados" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Departamento" />
                <ChoiceBox fx:id="departamentoChoiceBox" minWidth="200" prefWidth="250" style="-fx-font-size: 12px;" />
                <Label text="Fecha Inicio" />
                <DatePicker fx:id="fechaInicioPicker" prefWidth="200" />
                <Label text="Fecha Fin" />
                <DatePicker fx:id="fechaFinPicker" prefWidth="200" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="supervisoresCheckBox" text="Sólo Supervisores" />
                <CheckBox fx:id="empleadosCheckBox" text="Sólo Empleados" />
                <Label text="Nombre, Apellido" />
                <TextField fx:id="searchField" prefWidth="250" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="searchButton" prefWidth="150" text="Buscar" />
                <Button fx:id="graphViewButton" prefWidth="150" text="Vista de Gráficos" />
            </HBox>

            <!-- Pane para el gráfico y el detalle a la derecha -->
            <HBox spacing="10" alignment="CENTER_LEFT" visible="false" managed="false" fx:id="chartContainer">
                <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
                    <Pane fx:id="chartPane" prefWidth="1200" prefHeight="1000"/> <!-- Se asegura el prefHeight -->
                </ScrollPane>
                <VBox fx:id="detailsPane" prefWidth="270" spacing="10" style="-fx-padding: 10; -fx-border-color: black; -fx-border-width: 1;">
                    <Label text="Detalles" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ListView fx:id="detailsListView"/>
                </VBox>
            </HBox>

            <!-- Tabla de empleados -->
            <TableView fx:id="employeeTableView" prefHeight="600"> <!-- Asegura espacio suficiente -->
                <columns>
                    <TableColumn fx:id="nombreColumn" text="Nombre completo" minWidth="200" />
                    <TableColumn fx:id="idColumn" text="ID" minWidth="20" />
                    <TableColumn fx:id="fechaEntradaColumn" text="Fecha" minWidth="80" />
                    <TableColumn fx:id="horaEntradaColumn" text="H.de entrada" minWidth="150" />
                    <TableColumn fx:id="horaSalidaColumn" text="H.de salida" minWidth="150" />
                    <TableColumn fx:id="tiempoLaboradoColumn" text="Tiempo laborado en horas" minWidth="250" />
                    <TableColumn fx:id="tipoAsistenciaColumn" text="Tipo de Asistencia" minWidth="170" />
                    <TableColumn fx:id="tipoSalidaColumn" text="Tipo de Salida" minWidth="150" />
                    <TableColumn fx:id="estadoColumn" text="Estado" minWidth="100" />
                </columns>
            </TableView>

            <!-- Paginación -->
            <HBox alignment="CENTER" spacing="10">
                <ChoiceBox fx:id="itemsPerPageChoiceBox" prefWidth="100.0" />
                <Button fx:id="previousButton" text="Previous" />
                <Button fx:id="page1Button" text="1" />
                <Button fx:id="page2Button" prefWidth="23.0" text="2" />
                <Button fx:id="page3Button" text="3" />
                <Button fx:id="nextButton" text="Next" />
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>




