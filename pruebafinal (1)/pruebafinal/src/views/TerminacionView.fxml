<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20">
    <Label text="Registro de huella entrada/salida" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Label text="Utiliza la huella para ingresar de manera segura" style="-fx-font-size: 16px;" />

    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-border-color: lightgrey; -fx-border-width: 2; -fx-background-radius: 10; -fx-border-radius: 10;">
        <ImageView fx:id="fingerprintImage" fitWidth="100" fitHeight="100" />

        <HBox spacing="10">
            <Button text="Registrar entrada" style="-fx-font-size: 14px; -fx-font-weight: bold;" fx:id="registerEntryButton" />
            <Button text="Registrar salida" style="-fx-font-size: 14px;" fx:id="registerExitButton" />
        </HBox>

        <Label text="Entradas/salidas recientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <VBox alignment="CENTER_LEFT" spacing="5">
            <HBox spacing="10">
                <Label text="John Doe" style="-fx-font-size: 14px;" />
                <Label text="Checked In" style="-fx-font-size: 14px; -fx-text-fill: grey;" />
                <Label text="9:15 AM" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="10">
                <Label text="Jane Doe" style="-fx-font-size: 14px;" />
                <Label text="Checked Out" style="-fx-font-size: 14px; -fx-text-fill: grey;" />
                <Label text="5:30 PM" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="10">
                <Label text="Bob Smith" style="-fx-font-size: 14px;" />
                <Label text="Checked In" style="-fx-font-size: 14px; -fx-text-fill: grey;" />
                <Label text="11:30 AM" style="-fx-font-size: 14px;" />
            </HBox>
        </VBox>
    </VBox>
</VBox>
