<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1351.0" prefWidth="1395.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistroController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Sección inferior siempre visible -->
        <bottom>
            <AnchorPane minHeight="50.0" style="-fx-border-width: 1; -fx-border-color: black;" BorderPane.alignment="TOP_CENTER">
                <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10" VBox.vgrow="NEVER">
                    <Button fx:id="enviarButton" onAction="#enviarDatos" text="Enviar" />
                    <Button fx:id="borrarButton" text="Borrar" />
                    <Button fx:id="rellenarButton" onAction="#rellenarCampos" text="Rellenar" />
                    <Button fx:id="ingresarHuellaButton" onAction="#handleIngresarHuellaButton" prefHeight="0.0" prefWidth="291.0" text="Presionar para ingresar huella" />
                </HBox>
            </AnchorPane>
        </bottom>

        <!-- Centro del layout, con el formulario -->
        <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <content>
                    <VBox prefWidth="1409.0">
                        <GridPane hgap="10" minHeight="0" vgap="10.0" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <!-- Configuración de las columnas: Ampliar el ancho de las columnas -->
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints minWidth="150.0" prefWidth="400.0" />
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <!-- Configuración de las filas -->
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                                <RowConstraints minHeight="0.0" prefHeight="40.0" />
                            </rowConstraints>

                            <Label text="Nombre/s" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="nombreField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label text="Apellido Materno" GridPane.columnIndex="4" />
                            <TextField fx:id="apellidoMaternoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" />
                            <Label text="Apellido Paterno" GridPane.columnIndex="2" />
                            <TextField fx:id="apellidoPaternoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" />
                            <Label text="Fecha de nacimiento" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <DatePicker fx:id="fechaNacimientoPicker" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="País" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <TextField fx:id="paisField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            <Label text="Ciudad" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                            <TextField fx:id="ciudadField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" GridPane.rowIndex="1" />

                            <!-- Separador entre las secciones -->
                            <Separator style=" -fx-padding: 10 20 10 20;" GridPane.columnSpan="6" GridPane.rowIndex="2" />

                            <Label text="Correo electrónico" GridPane.rowIndex="4" />
                            <TextField fx:id="emailField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            <Label text="Lada" GridPane.rowIndex="3" />
                            <TextField fx:id="ladaField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <Label text="Teléfono" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                            <TextField fx:id="telefonoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                            <Label text="RFC" GridPane.columnIndex="4" GridPane.rowIndex="4" />
                            <TextField fx:id="rfcField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" GridPane.rowIndex="4" />
                            <Label text="CURP" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                            <TextField fx:id="curpField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                            <!-- Otro separador entre las secciones -->
                            <Separator style=" -fx-padding: 10 20 10 20;" GridPane.columnSpan="6" GridPane.rowIndex="5" />

                            <Label text="Profesión" GridPane.rowIndex="6" />
                            <TextField fx:id="profesionField" prefHeight="25.0" prefWidth="772.0" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />


                            <Label text="Departamento" GridPane.rowIndex="7" />
                            <ChoiceBox fx:id="departamentoChoiceBox" minWidth="150" prefWidth="200" style="-fx-font-size: 12px;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            <Label text="Puesto" GridPane.columnIndex="2" GridPane.rowIndex="7" />
                            <ChoiceBox fx:id="puestoChoiceBox" minWidth="150" prefWidth="200" style="-fx-font-size: 12px;" GridPane.columnIndex="3" GridPane.rowIndex="7" />

                            <Label GridPane.columnIndex="4" GridPane.rowIndex="4" />

                            <!-- Imagen de la huella dactilar -->
                            <ImageView fx:id="fingerprintImageView" fitHeight="115.0" fitWidth="450.0" preserveRatio="true" GridPane.columnIndex="4" GridPane.rowIndex="7" />
                        </GridPane>
                    </VBox>
                </content>
            </ScrollPane>
        </center>

        <!-- Título superior -->
        <top>
            <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Registro de empleado" textAlignment="CENTER" BorderPane.alignment="CENTER" />
        </top>

    </BorderPane>
</AnchorPane>
