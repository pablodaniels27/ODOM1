<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="675.0" prefWidth="1214.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <SplitPane fx:id="splitPane" dividerPositions="0.5" style="-fx-border-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <Pane prefHeight="200.0" prefWidth="200.0">
                <children>
                    <!-- Imagen con efecto blurry ocupando el 60% -->
                    <ImageView fx:id="backgroundImage" fitHeight="675.0" fitWidth="728.4" preserveRatio="false">
                        <image>
                            <Image url="@../resources/fondologin.jpg" />
                        </image>
                        <effect>
                            <GaussianBlur radius="20" />
                        </effect>
                    </ImageView>
                </children>
            </Pane>
            <!-- Panel de contraste con el formulario de inicio de sesión ocupando el otro 40% -->
            <VBox alignment="CENTER" maxWidth="485.6" minWidth="485.6" prefHeight="675.0" prefWidth="485.6" spacing="10" style="-fx-background-color: #F7F7F7; -fx-padding: 30; -fx-border-color: transparent; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 24px; -fx-text-fill: #333333;" text="ACCOUNT LOGIN" />

                <TextField fx:id="usernameField" onKeyPressed="#handleEnterKey" prefWidth="250.0" promptText="User name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;" />

                <PasswordField fx:id="passwordField" onKeyPressed="#handleEnterKey" prefWidth="250.0" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;" />

                <Button fx:id="loginButton" onAction="#handleLoginAction" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="SIGN IN" />

                <Hyperlink style="-fx-text-fill: #28A745;" text="Forgot User Name | Password?" />

                <Hyperlink style="-fx-text-fill: #28A745;" text="SIGN UP" />
            </VBox>
        </items>
    </SplitPane>

    <!-- Botón Regresar en la esquina superior izquierda -->
    <Button contentDisplay="TOP" onAction="#handleBackToPreLoginAction" prefHeight="40" prefWidth="100" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Regresar" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
</AnchorPane>