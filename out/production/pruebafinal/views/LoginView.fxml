<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.GaussianBlur?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <!-- HBox para dividir la pantalla en dos columnas -->
    <HBox fx:id="mainHBox" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Imagen con efecto blurry ocupando el 50% -->
        <ImageView fx:id="backgroundImage" preserveRatio="false" HBox.hgrow="ALWAYS">
            <image>
                <Image url="@../resources/fondologin.jpg" />
            </image>
            <effect>
                <GaussianBlur radius="20" />
            </effect>
        </ImageView>

        <!-- Panel de contraste con el formulario de inicio de sesión ocupando el otro 50% -->
        <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 50;" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #F7F7F7; -fx-padding: 30; -fx-border-color: #CCCCCC; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 24px; -fx-text-fill: #333333;" text="ACCOUNT LOGIN" />

                <TextField fx:id="usernameField" prefWidth="250.0" promptText="User name" style="-fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;" onKeyPressed="#handleEnterKey"/>

                <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;" onKeyPressed="#handleEnterKey"/>

                <Button fx:id="loginButton" onAction="#handleLoginAction" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="SIGN IN" />

                <Hyperlink style="-fx-text-fill: #28A745;" text="Forgot User Name | Password?" />

                <Hyperlink style="-fx-text-fill: #28A745;" text="SIGN UP" />
            </VBox>
        </VBox>
    </HBox>

    <!-- Botón Regresar en la esquina superior izquierda -->
    <Button contentDisplay="TOP" onAction="#handleBackToPreLoginAction" prefWidth="100" prefHeight="40" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Regresar" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
</AnchorPane>
