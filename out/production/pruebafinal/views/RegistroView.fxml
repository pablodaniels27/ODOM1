<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="480" minWidth="640" prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistroController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Registro de empleado" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
    <GridPane hgap="10" vgap="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
        <columnConstraints>
            <!-- Configuración de las columnas: Ampliar el ancho de las columnas -->
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
            <ColumnConstraints minWidth="150" prefWidth="200" />
        </columnConstraints>
        <rowConstraints>
            <!-- Configuración de las filas -->
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
            <RowConstraints minHeight="30.0" prefHeight="40.0" />
        </rowConstraints>

        <Label text="Nombre/s" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nombreField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Apellido Materno" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="apellidoMaternoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Label text="Apellido Paterno" GridPane.columnIndex="4" GridPane.rowIndex="0" />
        <TextField fx:id="apellidoPaternoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" GridPane.rowIndex="0" />
        <Label text="Fecha de nacimiento" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <DatePicker fx:id="fechaNacimientoPicker" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="País" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="paisField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <Label text="Ciudad" GridPane.columnIndex="4" GridPane.rowIndex="1" />
        <TextField fx:id="ciudadField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" GridPane.rowIndex="1" />
        <Label text="Correo electrónico" GridPane.columnIndex="6" GridPane.rowIndex="1" />
        <TextField fx:id="emailField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="7" GridPane.rowIndex="1" />
        <Label text="Lada" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="ladaField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Teléfono" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <TextField fx:id="telefonoField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        <Label text="RFC" GridPane.columnIndex="4" GridPane.rowIndex="2" />
        <TextField fx:id="rfcField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="5" GridPane.rowIndex="2" />
        <Label text="CURP" GridPane.columnIndex="6" GridPane.rowIndex="2" />
        <TextField fx:id="curpField" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="7" GridPane.rowIndex="2" />
        <Label text="Profesión" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="profesionField" prefWidth="400" style="-fx-alignment: CENTER-LEFT;" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />

        <Label text="Departamento" GridPane.columnIndex="4" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="departamentoChoiceBox" minWidth="150" prefWidth="200" style="-fx-font-size: 12px;" GridPane.columnIndex="5" GridPane.rowIndex="3" />

        <Label text="Puesto" GridPane.columnIndex="6" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="puestoChoiceBox" minWidth="150" prefWidth="200" style="-fx-font-size: 12px;" GridPane.columnIndex="7" GridPane.rowIndex="3" />

        <Label GridPane.columnIndex="4" GridPane.rowIndex="4" />
        <Pane prefHeight="26.0" prefWidth="150.0" GridPane.columnIndex="6" GridPane.rowIndex="4">
            <children>
                <ImageView fx:id="fingerprintImageView" fitHeight="100.0" fitWidth="242.0" preserveRatio="true" />
            </children>
        </Pane>

        <Button fx:id="ingresarHuellaButton" onAction="#handleIngresarHuellaButton" prefHeight="62.0" prefWidth="150.0" text="Presionar para ingresar huella" GridPane.columnIndex="6" GridPane.rowIndex="6" />

        <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="8" GridPane.rowIndex="7">
            <Button fx:id="enviarButton" onAction="#enviarDatos" text="Enviar" />
            <Button fx:id="borrarButton" text="Borrar" />
            <Button fx:id="rellenarButton" onAction="#rellenarCampos" text="Rellenar" />
        </HBox>
    </GridPane>
</AnchorPane>
