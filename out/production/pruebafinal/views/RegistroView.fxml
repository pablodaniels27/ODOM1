<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistroController">
    <ScrollPane fitToWidth="true">
        <VBox alignment="TOP_CENTER" spacing="10">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Registro de empleado" />
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre/es" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Apellido Materno" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="apellidoMaternoField" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="Apellido Paterno" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <TextField fx:id="apellidoPaternoField" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                <Label text="Fecha de nacimiento" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="fechaNacimientoField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="País" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="paisField" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Label text="Ciudad" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <TextField fx:id="ciudadField" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                <Label text="Correo electrónico" GridPane.columnIndex="6" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" GridPane.columnIndex="7" GridPane.rowIndex="1" />
                <Label text="Lada" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="ladaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Teléfono" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="telefonoField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <Label text="RFC" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                <TextField fx:id="rfcField" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                <Label text="CURP" GridPane.columnIndex="6" GridPane.rowIndex="2" />
                <TextField fx:id="curpField" GridPane.columnIndex="7" GridPane.rowIndex="2" />
                <Label text="Profesión" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="profesionField" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
                <Label GridPane.columnIndex="4" GridPane.rowIndex="3" />
                <TextArea fx:id="notasArea" prefHeight="192.0" prefWidth="502.0" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="3"
                          editable="false" focusTraversable="false" />
                <ImageView fx:id="imageView" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4" />
                <Button fx:id="ingresarHuellaButton" onAction="#handleIngresarHuellaButton" prefHeight="26.0" prefWidth="179.0" text="Presionar para ingresar huella" GridPane.columnIndex="6" GridPane.rowIndex="4" />

                <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="8" GridPane.rowIndex="5">
                    <Button fx:id="enviarButton" onAction="#enviarDatos" text="Enviar" />
                    <Button fx:id="borrarButton" text="Borrar" />
                </HBox>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </ScrollPane>
</VBox>
